<div id="divTablaProductos">
    <h2 id="h2Productos">Productos: <%- productos.length %> </h2>
    <a class="aDash" href="/dashboard/productos/new">Nuevo Producto <i class="fa-solid fa-plus"></i></a>

    <table>

        <thead>
            <tr>
                <th></th>
                <th>TIPO</th>
                <th>DESCRIPCIÓN</th>
                <th>PRECIO</th>
                <th>FECHA</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% productos.forEach(item=> { %>
                
                <tr class="productosDash">
                    
                    <% if (item.imagen=='' ) { %>
                        <td><img src="<%- rutaBase %>assets/nopic.png" alt=""></td>
                    <% } else { %>
                        <td><img src="<%- item.imagen %>" alt=""></td>
                    <% } %>

                    <td> <%- item.tipo %></td>
                    <td> <%- item.descripcion %></td>
                    <td> <%- item.precio %>€</td>
                    <td> <%- item.fecha %></td>
                    <td class="btnsTablaDash">
                        <a href="/dashboard/productos/id/<%- item._id %>"><i class="fa-solid fa-pen-to-square"></i></a>                                    
                        <a href=""><i class="fa-solid fa-eye"></i></a>
                        <a href="/dashboard/productos/dlt/<%- item._id %>"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>

            <% }) %>
        </tbody>

    </table>
</div>