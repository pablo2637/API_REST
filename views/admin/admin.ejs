<%- include( 'templates/header' ,{ tituloURL} ) %>

    <main>

        <div id="divUser">            
            <form action="/dashboard/checkUser" method="POST">

                <label for="email">Usuario:</label>
                <% if (!tituloURL.includes('Error')) { %>
                    <input type="text" name="email" id="email" placeholder="email..." autocomplete="off">
                <% } else { %>
                    <input type="text" name="email" id="email" placeholder="email..." autocomplete="off" value="<%- email  %>">
                <% } %>

                <label for="password">Contrase√±a:</label>
                <input type="password" name="password" id="password" autocomplete="off">

                <button id="btnSubmitUser" type="submit"><i class="fa-solid fa-person-shelter"></i> Entrar</button>                            

            </form>
        </div>
        
        <% if (tituloURL.includes('Error')) { %>
            <p id="pErrorUser"><%- error %></p>
        <% } else { %>
            <p id="pErrorUser"></p>
        <% } %>

    </main>


    <%- include('templates/footer') %>