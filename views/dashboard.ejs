<%- include( 'templates/header' ,{tituloURL} ) %>

    <main>
        <h1><%- titulo %></h1>

        <div id="divFormulario">
            <p>ID: <span id="spnID"></span></p>
            <p>Fecha Alta: <span id="spnFechaAlta"></span></p>
            <form action="">
                <label for="txtTipo" id="labelTipoDash">Tipo:</label>
                <input type="text" name="txtTipo" id="txtTipo">

                <label for="txtDesc">Descripción:</label>
                <input type="text" name="txtDesc" id="txtDesc">

                <label for="txtImg">Source Imágen:</label>
                <input type="text" name="txtImg" id="txtImg">

                <label for="numPrecio">Precio:</label>
                <input type="number" name="numPrecio" id="numPrecio" min="1">

                <div id="btnsFormDash">
                    <input type="submit" value="Agregar" id="btnSubmitDash">
                    <input type="button" value="Modificar" id="btnModificarDash">
                    <input type="button" value="Eliminar" id="btnEliminarDash">
                    <input type="reset" value="Cancelar" id="btnCancelarDash">
                </div>
            </form>
            <div id="divImgDash">
                <img id="imgFormDash" src="assets/nopic.png" alt="">
            </div>
        </div>

        <div id="divTablaAdmin">
            <h2>Productos: <%- productos.length %> </h2>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th></th>
                        <th>TIPO</th>
                        <th>DESCRIPCIÓN</th>
                        <th>PRECIO</th>
                        <th>FECHA</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach(item=> { %>
                        <tr class="productosDash">
                            <td> <%- item._id %></td>
                            <% if (item.imagen=='' ) { %>
                                <td><img src="assets/nopic.png" alt=""></td>
                                <% } else { %>
                                    <td><img src="<%- item.imagen %>" alt=""></td>
                                    <% } %>
                                        <td> <%- item.tipo %></td>
                                        <td> <%- item.descripcion %></td>
                                        <td> <%- item.precio %>€</td>
                                        <td> <%- item.fecha %></td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <div id="divTablaServicios">
            <h2>Servicios: <%- servicios.length %> </h2>

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>SERVICIO</th>
                        <th>DESCRIPCIÓN</th>
                        <th>FECHA ALTA</th>
                    </tr>
                </thead>
                <tbody>
                    <% servicios.forEach(serv=> { %>
                        <tr class="serviciosDash">
                            <td> <%- serv._id %></td>
                            <td> <%- serv.servicio %></td>
                            <td> <%- serv.descripcion %></td>
                            <td> <%- serv.fecha %></td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

    </main>

    <%- include('templates/footer') %>